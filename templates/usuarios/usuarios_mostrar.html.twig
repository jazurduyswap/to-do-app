{% extends 'base.html.twig' %}

{% block title %}Usuario: {{ usuario.nombre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div
                    class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">{{ usuario.nombre }}</h1>
                    <a href="{{ path('usuarios_index') }}"
                        class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Atrás
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>ID:</strong> {{ usuario.id }}</p>
                            <p><strong>Nombre:</strong> {{ usuario.nombre }}</p>
                            <p><strong>Email:</strong> {{ usuario.email }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Roles:</strong></p>
                            {% for role in usuario.roles %}
                            <span class="badge bg-secondary me-1">{{ role
                                }}</span>
                            {% endfor %}

                            <p class="mt-3"><strong>Grupos:</strong></p>
                            {% for grupo in usuario.grupos %}
                            <span class="badge bg-info me-1">{{ grupo.nombre
                                }}</span>
                            {% else %}
                            <em class="text-muted">Sin grupos asignados</em>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex gap-2">
                    <a href="{{ path('usuarios_editar', { id: usuario.id }) }}"
                        class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <form method="post"
                        action="{{ path('usuarios_borrar', { id: usuario.id }) }}"
                        onsubmit="return confirm('¿Estás seguro de eliminar este usuario?');"
                        class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </form>
                </div>
            </div>
            <div class="card mt-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-list-task"></i> Tareas asignadas
                    </h5>
                    <a href="{{ path('task_nuevo') }}" class="btn btn-success btn-sm">
                        <i class="bi bi-plus-circle"></i> Nueva Tarea
                    </a>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        {% for task in usuario.tasks %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">{{ task.titulo }}</h6>
                                <small class="text-muted">
                                    {% if task.tags|length > 0 %}
                                        {% for tag in task.tags %}
                                            <span class="badge bg-primary me-1">{{ tag.nombre }}</span>
                                        {% endfor %}
                                    {% endif %}
                                </small>
                            </div>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="{{ path('task_mostrar', {'id': task.id}) }}" class="btn btn-outline-info" title="Ver detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('task_editar', {'id': task.id}) }}" class="btn btn-outline-warning" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" action="{{ path('task_eliminar', {'id': task.id}) }}" style="display:inline-block" onsubmit="return confirm('¿Seguro que deseas eliminar esta tarea?');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </li>
                        {% else %}
                        <li class="list-group-item text-center text-muted">
                            <i class="bi bi-inbox display-4 d-block mb-2"></i>
                            No hay tareas asignadas
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}