{% extends 'base.html.twig' %}

{% block title %}Usuario: {{ usuario.nombre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">{{ usuario.nombre }}</h1>
                    <a href="{{ path('usuarios_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Atrás
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>ID:</strong> {{ usuario.id }}</p>
                            <p><strong>Nombre:</strong> {{ usuario.nombre }}</p>
                            <p><strong>Email:</strong> {{ usuario.email }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Roles:</strong></p>
                            {% for role in usuario.roles %}
                                <span class="badge bg-secondary me-1">{{ role }}</span>
                            {% endfor %}
                            
                            <p class="mt-3"><strong>Grupos:</strong></p>
                            {% for grupo in usuario.grupos %}
                                <span class="badge bg-info me-1">{{ grupo.nombre }}</span>
                            {% else %}
                                <em class="text-muted">Sin grupos asignados</em>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex gap-2">
                    <a href="{{ path('usuarios_editar', { id: usuario.id }) }}" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <form method="post" action="{{ path('usuarios_borrar', { id: usuario.id }) }}" 
                          onsubmit="return confirm('¿Estás seguro de eliminar este usuario?');" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}