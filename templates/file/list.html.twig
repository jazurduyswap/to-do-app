{% extends 'base.html.twig' %}

{% block title %}Archivos de {{ task.titulo }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Archivos de "{{ task.titulo }}"</h1>
        <a href="{{ path('task_mostrar', {'id': task.id}) }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la tarea
        </a>
    </div>
    
    {# Flash messages #}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : (type == 'success' ? 'success' : 'info') }} alert-dismissible fade show">
                <i class="bi bi-{{ type == 'error' ? 'exclamation-triangle' : (type == 'success' ? 'check-circle' : 'info-circle') }}"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}
    
    {% if files|length > 0 %}
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-files"></i> Archivos ({{ files|length }})
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th><i class="bi bi-file-earmark"></i> Nombre</th>
                                <th><i class="bi bi-filetype-txt"></i> Tipo</th>
                                <th><i class="bi bi-hdd"></i> Archivo</th>
                                <th class="text-end"><i class="bi bi-gear"></i> Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for file in files %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            {% if file.mimeType starts with 'image/' %}
                                                <i class="bi bi-image text-primary me-2"></i>
                                            {% elseif file.mimeType == 'application/pdf' %}
                                                <i class="bi bi-file-earmark-pdf text-danger me-2"></i>
                                            {% elseif file.mimeType starts with 'application/vnd.ms-excel' or file.mimeType starts with 'application/vnd.openxmlformats-officedocument.spreadsheetml' %}
                                                <i class="bi bi-file-earmark-excel text-success me-2"></i>
                                            {% elseif file.mimeType starts with 'application/msword' or file.mimeType starts with 'application/vnd.openxmlformats-officedocument.wordprocessingml' %}
                                                <i class="bi bi-file-earmark-word text-primary me-2"></i>
                                            {% else %}
                                                <i class="bi bi-file-earmark text-secondary me-2"></i>
                                            {% endif %}
                                            <a href="{{ path('file_details', {'id': file.id}) }}" class="text-decoration-none">
                                                {{ file.nombre }}
                                            </a>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">{{ file.mimeType }}</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            {{ file.ruta }}
                                        </small>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            {% if file.mimeType starts with 'image/' %}
                                                <a href="{{ path('file_view', {'id': file.id}) }}" class="btn btn-sm btn-outline-info" title="Ver imagen" target="_blank">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            {% endif %}
                                            <a href="{{ path('file_download', {'id': file.id}) }}" class="btn btn-sm btn-outline-primary" title="Descargar">
                                                <i class="bi bi-download"></i>
                                            </a>
                                            <form method="post" action="{{ path('file_delete', {'id': file.id}) }}" style="display:inline-block" onsubmit="return confirm('¿Seguro que deseas eliminar este archivo?');">
                                                <button class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="bi bi-file-earmark-x display-1 text-muted"></i>
            <h3 class="mt-3 text-muted">No hay archivos</h3>
            <p class="text-muted">Esta tarea no tiene archivos adjuntos.</p>
        </div>
    {% endif %}
    
    {# Sección para subir archivos #}
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-cloud-upload"></i> Subir Nuevo Archivo
            </h5>
        </div>
        <div class="card-body">
            <form action="{{ path('file_upload', {'taskId': task.id}) }}" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="file" class="form-label">Seleccionar archivo</label>
                            <input type="file" class="form-control" id="file" name="file" required>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i>
                                Tamaño máximo: 10MB. Formatos permitidos: PDF, DOC, DOCX, XLS, XLSX, JPG, PNG, etc.
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            <i class="bi bi-upload"></i> Subir Archivo
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
