{% extends 'base.html.twig' %}

{% block title %}Editar Tag{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h1 class="mb-0">Editar Tag</h1>
                </div>
                <div class="card-body">
                    {# Mostrar mensajes flash #}
                    {% for flash_error in app.flashes('danger') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ flash_error }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    {% for flash_message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ flash_message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    {{ form_start(form) }}
                    
                    {# Errores generales del formulario #}
                    {{ form_errors(form) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.nombre, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.nombre) }}
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('tag_index') }}" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Actualizar Tag</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
