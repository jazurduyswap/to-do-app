{% extends 'base.html.twig' %}

{% block title %}Crear Tag{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h1 class="mb-0">Crear Nuevo Tag</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {# errores globales del formulario (incluye CSRF, etc.) #}
                        {{ form_errors(form) }}

                        {# este ya incluye label + input + errores del campo #}
                        {{ form_row(form.nombre) }}

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('tag_index') }}" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Crear Tag</button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
