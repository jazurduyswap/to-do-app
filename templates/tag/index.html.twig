{% extends 'base.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">Tags</h1>
                    <a href="{{ path('app_homepage') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-house"></i> Inicio
                    </a>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4>Módulo de Tags</h4>
                        <p class="mb-0">Aquí podrás gestionar las etiquetas para organizar tus tareas.</p>
                    </div>
                    
                    <div class="text-center">
                        <p class="text-muted">Funcionalidad en desarrollo...</p>
                        <div class="d-grid gap-2 d-md-block">
                            <button class="btn btn-warning" disabled>
                                <i class="bi bi-tag"></i> Nuevo Tag
                            </button>
                            <button class="btn btn-outline-warning" disabled>
                                <i class="bi bi-tags"></i> Ver Todos
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
