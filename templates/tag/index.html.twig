{% extends 'base.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">Tags</h1>
                    <div>
                        <a href="{{ path('tag_nuevo') }}" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Nuevo Tag
                        </a>
                        <a href="{{ path('app_homepage') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-house"></i> Inicio
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    {% if tags|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                        <th>Tareas asociadas</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for tag in tags %}
                                    <tr>
                                        <td>{{ tag.id }}</td>
                                        <td>
                                            <span class="badge bg-primary fs-6">{{ tag.nombre }}</span>
                                        </td>
                                        <td>
                                            {% if tag.tasks|length > 0 %}
                                                <span class="badge bg-success">{{ tag.tasks|length }} tareas</span>
                                                <div class="mt-1">
                                                    {% for task in tag.tasks|slice(0, 3) %}
                                                        <small class="text-muted d-block">• {{ task.titulo }}</small>
                                                    {% endfor %}
                                                    {% if tag.tasks|length > 3 %}
                                                        <small class="text-muted">y {{ tag.tasks|length - 3 }} más...</small>
                                                    {% endif %}
                                                </div>
                                            {% else %}
                                                <span class="text-muted">Sin tareas</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="{{ path('tag_mostrar', {'id': tag.id}) }}" class="btn btn-outline-info" title="Ver detalles">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('tag_editar', {'id': tag.id}) }}" class="btn btn-outline-warning" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <form method="post" action="{{ path('tag_eliminar', {'id': tag.id}) }}" style="display:inline-block" onsubmit="return confirm('¿Seguro que deseas eliminar este tag?');">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="bi bi-tags display-1 text-muted"></i>
                            <h3 class="mt-3">No hay tags</h3>
                            <p class="text-muted">No hay etiquetas creadas para organizar las tareas.</p>
                            <a href="{{ path('tag_nuevo') }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Crear primer tag
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
