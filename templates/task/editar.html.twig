{% extends 'base.html.twig' %}

{% block title %}Editar Tarea{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Editar Tarea</h1>
    
    {# Flash messages #}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : (type == 'success' ? 'success' : 'info') }} alert-dismissible fade show">
                <i class="bi bi-{{ type == 'error' ? 'exclamation-triangle' : (type == 'success' ? 'check-circle' : 'info-circle') }}"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}
    
    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form) }}
            
            {# Errores generales del formulario #}
            {{ form_errors(form) }}
            
            <div class="mb-3">
                {{ form_label(form.titulo, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.titulo, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.titulo) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.parentTask, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.parentTask, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.parentTask) }}
            </div>
            
            {% if form.usuario is defined %}
            <div class="mb-3">
                {{ form_label(form.usuario, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.usuario, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.usuario) }}
            </div>
            {% endif %}
            
            <div class="mb-4">
                <h5 class="mb-3">Tags (seleccionar/deseleccionar)</h5>                
                <div class="row">
                    {% for choice in form.tags %}
                        <div class="col-md-4 mb-2">
                            <div class="form-check">
                                {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(choice, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                {{ form_errors(form.tags) }}
                <small class="form-text text-muted">Selecciona los tags que quieres asociar a esta tarea.</small>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="{{ path('task_index') }}" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary btn-lg">Actualizar Tarea</button>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>  
</div>
{% endblock %}