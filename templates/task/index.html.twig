{% extends 'base.html.twig' %}

{% block title %}Tareas{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">
                        {% if is_granted('ROLE_ADMIN') %}
                            Todas las Tareas
                        {% else %}
                            Mis Tareas
                        {% endif %}
                    </h1>
                    <div>
                        <a href="{{ path('task_nuevo') }}" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Nueva Tarea
                        </a>
                        <a href="{{ path('app_homepage') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-house"></i> Inicio
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    {% if tasks|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Título</th>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <th>Usuario</th>
                                        {% endif %}
                                        <th>Tags</th>
                                        <th>Subtareas</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for task in tasks %}
                                    <tr>
                                        <td>{{ task.id }}</td>
                                        <td>
                                            <strong>{{ task.titulo }}</strong>
                                            {% if task.parentTask %}
                                                <br><small class="text-muted">Tarea padre: {{ task.parentTask.titulo }}</small>
                                            {% endif %}
                                        </td>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <td>
                                                {% if task.usuario %}
                                                    <span class="badge bg-info">{{ task.usuario.email }}</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Sin asignar</span>
                                                {% endif %}
                                            </td>
                                        {% endif %}
                                        <td>
                                            {% for tag in task.tags %}
                                                <span class="badge bg-primary me-1">{{ tag.nombre }}</span>
                                            {% else %}
                                                <span class="text-muted">Sin tags</span>
                                            {% endfor %}
                                        </td>
                                        <td>
                                            {% if task.childTasks|length > 0 %}
                                                <span class="badge bg-success">{{ task.childTasks|length }} subtareas</span>
                                            {% else %}
                                                <span class="text-muted">Sin subtareas</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a href="{{ path('task_mostrar', {'id': task.id}) }}" class="btn btn-outline-info" title="Ver detalles">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('task_editar', {'id': task.id}) }}" class="btn btn-outline-warning" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <form method="post" action="{{ path('task_eliminar', {'id': task.id}) }}" style="display:inline-block" onsubmit="return confirm('¿Seguro que deseas eliminar esta tarea?');">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h3 class="mt-3">No hay tareas</h3>
                            <p class="text-muted">
                                {% if is_granted('ROLE_ADMIN') %}
                                    No hay tareas creadas en el sistema.
                                {% else %}
                                    No tienes tareas asignadas.
                                {% endif %}
                            </p>
                            <a href="{{ path('task_nuevo') }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Crear primera tarea
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
