{% extends 'base.html.twig' %}

{% block title %}Tareas{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">Tareas</h1>
                    <a href="{{ path('app_homepage') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-house"></i> Inicio
                    </a>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <h4>Módulo de Tareas</h4>
                        <p class="mb-0">Aquí podrás gestionar todas las tareas de la aplicación TO-DO.</p>
                    </div>
                    
                    <div class="text-center">
                        <p class="text-muted">Funcionalidad en desarrollo...</p>
                        <div class="d-grid gap-2 d-md-block">
                            <button class="btn btn-primary" disabled>
                                <i class="bi bi-plus-circle"></i> Nueva Tarea
                            </button>
                            <button class="btn btn-outline-primary" disabled>
                                <i class="bi bi-list-ul"></i> Ver Todas
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
