{% extends 'base.html.twig' %}

{% block title %}TO DO APP - Archivos de Tarea{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Archivos de la Tarea: {{ task.titulo }}</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Subir nuevo archivo</h5>
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            <div class="mb-3">
                {{ form_label(form.nombre, 'Nombre del archivo') }}
                {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nombre) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.uploadedFile, 'Seleccionar archivo') }}
                {{ form_widget(form.uploadedFile, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.uploadedFile) }}
            </div>
            <button type="submit" class="btn btn-primary">Subir</button>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Archivos subidos</h5>
            {% if task.files|length > 0 %}
                <ul class="list-group">
                    {% for file in task.files %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="{{ asset(file.ruta) }}" target="_blank">{{ file.nombre }}</a>
                            <span class="badge bg-secondary">{{ file.mimeType }}</span>
                            <form action="{{ path('task_file_delete', {'id': task.id, 'id_file': file.id}) }}" method="post" onsubmit="return confirm('Â¿Seguro que deseas eliminar este archivo?');">
                                <button class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-muted">No hay archivos subidos para esta tarea.</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}