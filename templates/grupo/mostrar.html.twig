{% extends 'base.html.twig' %}

{% block title %}Grupo: {{ grupo.nombre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Navegación -->
    <div class="mb-3">
        <a href="{{ path('grupo_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver a Grupos
        </a>
    </div>

    <!-- Mensajes Flash -->
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                <i class="bi bi-{{ type == 'success' ? 'check-circle' : 'exclamation-triangle' }}"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="row">
        <div class="col-12">
            <div class="card header">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1>Grupo: {{ grupo.nombre }}</h1>
                    <a href="{{ path('grupo_añadir_usuario', {grupoId: grupo.id}) }}" class="btn btn-primary">
                        <i class="bi bi-person-plus"></i> Añadir Usuario
                    </a>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h2><i class="bi bi-people"></i> Usuarios en el grupo</h2>
                </div>
                <div class="card-body p-0">
                    {% if grupo.usuarios is empty %}
                        <div class="text-center p-4">
                            <i class="bi bi-person-x display-4 text-muted"></i>
                            <p class="text-muted mt-2">No hay usuarios en este grupo.</p>
                        </div>
                    {% else %}
                        <ul class="list-group list-group-flush">
                            {% for usuario in grupo.usuarios %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="bi bi-person"></i>
                                    <strong>{{ usuario.nombre }}</strong>
                                    <small class="text-muted">({{ usuario.email }})</small>
                                </div>
                                
                                <form method="post" action="{{ path('grupo_quitar_usuario', {
                                    'grupoId': grupo.id, 
                                    'usuarioId': usuario.id
                                }) }}" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('¿Quitar a {{ usuario.nombre }} del grupo?')">
                                        <i class="bi bi-x-circle"></i> Quitar
                                    </button>
                                </form>
                            </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}