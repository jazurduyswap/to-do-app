{% extends 'base.html.twig' %}

{% block title %}A単adir Usuario al Grupo: {{ grupo.nombre }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2><i class="bi bi-person-plus"></i> A単adir Usuario al Grupo: {{ grupo.nombre }}</h2>
                </div>
                <div class="card-body">
                    {% if usuariosDisponibles is empty %}
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            No hay usuarios disponibles para a単adir a este grupo.
                        </div>
                        <div class="mt-3">
                            <a href="{{ path('grupo_mostrar', {id: grupo.id}) }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Volver al Grupo
                            </a>
                        </div>
                    {% else %}
                        <form method="post">
                            <div class="mb-3">
                                <label for="usuario_id" class="form-label">
                                    <i class="bi bi-person"></i> Seleccionar Usuario
                                </label>
                                <select class="form-select" id="usuario_id" name="usuario_id" required>
                                    <option value="">-- Selecciona un usuario --</option>
                                    {% for usuario in usuariosDisponibles %}
                                        <option value="{{ usuario.id }}">
                                            {{ usuario.nombre }} ({{ usuario.email }})
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('grupo_mostrar', {id: grupo.id}) }}" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-person-plus"></i> A単adir Usuario
                                </button>
                            </div>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
