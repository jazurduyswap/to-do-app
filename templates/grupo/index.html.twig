{% extends 'base.html.twig' %}

{% block title %}Grupos{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="mb-0">Grupos</h1>
                    <a href="{{ path('app_homepage') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-house"></i> Inicio
                    </a>
                    <a href="{{ path('grupo_nuevo') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-plus-circle"></i> Nuevo Grupo
                    </a>
                </div>
                <div class="card-body">
                    <h1>Lista de grupos</h1>
                    <ul class="list-group">
                        {% for grupo in grupos %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>{{ grupo.nombre }}</span>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('grupo_mostrar', { id: grupo.id }) }}" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> Ver
                                    </a>
                                    <a href="{{ path('grupo_editar', { id: grupo.id }) }}" class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <form method="post" action="{{ path('grupo_eliminar', { id: grupo.id }) }}" 
                                          style="display:inline;" 
                                          onsubmit="return confirm('¿Estás seguro de eliminar el grupo {{ grupo.nombre }}?');">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </form>
                                </div>
                            </li>
                        {% else %}
                            <li class="list-group-item text-muted">
                                No hay grupos registrados
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        
    </div>
</div>
{% endblock %}
