{% extends 'base.html.twig' %}

{% block title %}Editando el grupo {{ grupo.nombre }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1 class="mb-0">Detalles del Grupo</h1>
                <a href="{{ path('grupo_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a la lista de grupos
                </a>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_row(form.nombre) }}
                    {{ form_row(form.estado) }}
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}